{
    "$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded"
        }
    },
    "files": {
        "ignore": [
            "src/i18n/i18n-*",
            "src-tauri",
            "updater",
            "**/dist",
            "**/public",
            "**/node_modules",
            "**/*-lock.json",
            "pnpm-lock.yaml"
        ]
    }
}
